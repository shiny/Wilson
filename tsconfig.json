{
    /**
    * Recommended CompilerOptions from Bun Document
    * https://bun.sh/docs/runtime/typescript#recommended-compileroptions
    */
    "compilerOptions": {
        "baseUrl": "./src",
        // add Bun type definitions
        "types": ["bun-types", "@tealight.uk/soda"],
    
        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ESNext",

        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "moduleDetection": "force",
        
        "jsx": "react-jsx", // support JSX
        "allowJs": true, // allow importing `.js` from `.ts`
        "esModuleInterop": true,
        
        // best practices
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "composite": true,
    },
    "exclude": ["./packages/ui"]
}
